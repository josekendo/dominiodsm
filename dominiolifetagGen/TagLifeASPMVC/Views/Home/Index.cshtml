@{
    ViewBag.Title = "LifeTag | Inicio";
}
    <br />
    @if (Session["iduser"] != null && (String)Session["iduser"] != " ")
    {
        <script> window.location.href='@Url.Action("Index", "Usuario")'; </script>
    }
    @if (ViewBag.Men == "usuario incorrecto")
    {
        @:<div class="container">
            @:<h2>Error</h2>
            @:<div class="alert alert-danger">
                @:<strong>Error de usuario:</strong> Los datos que ha introducido no son correctos
            @:</div>
        @:</div>
    }
    @if (ViewBag.Men == "registro incorrecto")
    {
        @:<div class="container">
            @:<h2>Error</h2>
            @:<div class="alert alert-danger">
                @:<strong>Error de Registro:</strong> Los datos que ha introducido no son correctos o ya existe el usuario
            @:</div>
        @:</div>
    }
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="btn-group btn-group-justified">
                <a href="#" data-toggle="modal" data-target="#login" class="btn btn-default">Login</a>
                <a href="#" data-toggle="modal" data-target="#registro" class="btn btn-default">Registro</a>
        </div> 
        </div>
        </div>
    </div>
    <br/>
    <br/>
    <div class="row"><div class="col-xs-12"><h3>&nbsp;Ultimas publicaciones:</h3></div></div>
    @{Html.RenderAction("CargarUltimasPublicaciones", "Publicacion");} 
      <!-- Modal -->
    <div class="modal fade" id="login" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("LoginUsuario", "Usuario", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="nickname">Nickname:</label>
                            <input type="text" class="form-control" id="nickname" name="nickname">
                        </div>
                        <p align="center">O</p>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="pass">Password:</label>
                            <input type="password" class="form-control" name="pass" id="pass">
                        </div>
                        <button type="submit" class="btn btn-danger">Entrar</button>
                    } 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
   </div>
      <!-- Modal -->
    <div class="modal fade" id="registro" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Registro</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("RegistroUser", "Usuario", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="nick">Nickname:</label>
                        <input type="text" class="form-control" name="nick" id="nick">
                    </div>      
                    <div class="form-group">
                        <label for="name">Nombre:</label>
                        <input type="text" class="form-control" name="name" id="name">
                    </div>
                    <div class="form-group">
                        <label for="phone">Telefono(opcional):</label>
                        <input type="text" class="form-control" name="phone" id="phone">
                    </div>
                    <div class="form-group">
                        <label for="pais">Selecciona tu Pais:</label>
                        <select class="form-control" id="pais" name="pais">
                            <option value="es" selected>España</option>
                            <option value="en">Inglaterra</option>
                            <option value="ja">Japon</option>
                            <option value="ch">China</option>
                        </select>
                    </div> 
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="pwd" name="pwd">
                    </div>
                    <div class="form-group">
                        <label for="pwd2">Repetir password:</label>
                        <input type="password" class="form-control" id="pwd2" name="pwd2">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" name="poli"><a href="#">Acepto las politicas</a></label>
                    </div>
                    <button type="submit" class="btn btn-default">Registrarse</button>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
</div>
