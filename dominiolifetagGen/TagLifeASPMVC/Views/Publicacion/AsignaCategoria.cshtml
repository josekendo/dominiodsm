@model TagLifeASPMVC.Models.Usuario

@{
    ViewBag.Title = "AsignaCategoria";
    Layout = "~/Views/Shared/_LayoutUSER.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-xs-12 text-center">
        <h3>&nbsp;Asigna las categorias:</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-8 col-xs-offset-2 well well-lg">
        @using (Html.BeginForm("Asignacategoria", "Publicacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Seleccione una o mas categorias:</h4>
            <div class="custom-control custom-checkbox text-center">
                <!-- Mostrar lista de categorias-->
                <input type="checkbox" class="custom-control-input" id="categoria1">
                <label class="custom-control-label" for="categoria1">Categoria 1</label><br />
                <input type="checkbox" class="custom-control-input" id="categoria2">
                <label class="custom-control-label" for="categoria2">Categoria 2</label><br />
                <input type="checkbox" class="custom-control-input" id="categoria3">
                <label class="custom-control-label" for="categoria3">Categoria 3</label><br />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success" style="float:right;">Confirmar</button>
            </div>
        }
    </div>
</div>