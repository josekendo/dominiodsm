@model IEnumerable<TagLifeASPMVC.Models.Publicacion>
@{
    if (Model != null)
    {
        var contador = 0;
        foreach (var item in Model){
            
            if (contador < 3)
            {
                if(contador == 0)
                {
                    @:<div class="row">
                }
            @:<div class="col-md-4">
                @:<div class="thumbnail">
                    if (item.Tipo == "Imagen")
                    {
                        @:<img src="@Html.DisplayFor(modelItem => item.Archivo)" alt="Lights" style="width:100%">
                    }
                    else if (item.Tipo == "Video")
                    {
                        @:<a title="@Html.DisplayFor(modelItem => item.Nombre)" href="@Html.DisplayFor(modelItem => item.Archivo)"><img src="https://blog.majestic.com/wp-content/uploads/2010/10/Video-Icon-crop.png" alt="@Html.DisplayFor(modelItem => item.Nombre)" class="img-rounded" style="width:150%"></a>
                    }
                    else if (item.Tipo == "Audio")
                    {
                        @:<iframe style="width:100%" frameborder="0" allowfullscreen="" scrolling="no" src="@Html.DisplayFor(modelItem => item.Archivo)"></iframe>
                    }
                        @:<div class="caption">
                            @:<p>@item.Nombre</p>
                        @:</div>
                    @:</div>
             @:</div>
             contador++;
            }
            if(contador == 3)
            {
                    @:</div>
                    contador = 0;
             }
        }
    }
    else
    {
        <h4><b> No hay ultimas publicaciones</b></h4>
    }
}