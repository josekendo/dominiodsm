﻿﻿@model TagLifeASPMVC.Models.Usuario

@{
    ViewBag.Title = "SubirContenido";
    Layout = "~/Views/Shared/_LayoutUSER.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-xs-12 text-center">
        <h3>&nbsp;Sube tu contenido:</h3>
    </div>
</div>
@using (Html.BeginForm("Subircontenido", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 well well-lg">
            <div class="form-group col-xs-5 col-xs-offset-1">
                <label for="nombre">Nombre de publicación:</label>
                <input type="text" placeholder="Nombre" id="nombre" name="nombre">
                <label for="archivo">Introduce la ruta HTTP del fichero:</label>
                <input type="text" placeholder="Fichero" id="archivo" name="archivo">
            </div>
            <br />
            <div class="form-group col-xs-3 col-xs-offset-2">
                <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#myModal1">Agregar Categorias</button><br />
                <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#myModal2">Agregar Etiquetas</button>
            </div>
            <div class="form-group col-xs-10 col-xs-offset-1">
                <b>Tipo de archivo:</b><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipo" id="Imagen" value="Imagen">
                    <label class="form-check-label" for="Imagen">Imagen</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipo" id="Audio" value="Audio">
                    <label class="form-check-label" for="Audio">Audio</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipo" id="Video" value="Video">
                    <label class="form-check-label" for="Video">Video</label>
                </div>
            </div>
            <div class="form-group col-xs-10 col-xs-offset-1">
                <button type="submit" class="btn btn-success" style="float:right;">Subir</button>
            </div>
        </div>
    </div>
    <div id="myModal1" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Selecciona una o mas categorias:</h4>
                </div>
                <div class="modal-body">
                    @{Html.RenderAction("CargarCategorias", "Categoria");}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <div id="myModal2" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Agrega las etiquetas:</h4>
                </div>
                <div class="modal-body">
                    <label for="etiquetas">Introduzca la/s etiqueta/s que desea asignar (separadas por comas):</label>
                    <input type="text" class="form-control" id="etiquetas" name="etiquetas" placeholder="Escribe aquí las etiquetas"><br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
                        }