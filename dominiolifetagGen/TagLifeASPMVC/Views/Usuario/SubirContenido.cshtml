@model TagLifeASPMVC.Models.Usuario

@{
    ViewBag.Title = "SubirContenido";
    Layout = "~/Views/Shared/_LayoutUSER.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-xs-12 text-center">
        <h3>&nbsp;Sube tu contenido:</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-8 col-xs-offset-2 well well-lg">
        @using (Html.BeginForm("Subircontenido", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group col-xs-5 col-xs-offset-1">
                <label for="archivo">Seleccione el archivo:</label>
                <input type="file" class="form-control-file" id="archivo"><br />
            </div>
            <div class="form-group col-xs-3 col-xs-offset-2">
                <input type="button" class="btn btn-success btn-block" value="Asignar categorias"><br />
                <input type="button" class="btn btn-success btn-block" value="Añadir etiquetas">
            </div>
            <div class="form-group col-xs-10 col-xs-offset-1">
                <label for="comentario">Añada una descripción al archivo:</label>
                <textarea class="form-control" id="comentario" rows="3"></textarea><br />
                <button type="submit" class="btn btn-success" style="float:right;">Subir</button>
            </div>
        }
    </div>
</div>