@model TagLifeASPMVC.Models.Usuario

@{
    ViewBag.Title = "LifeTag | perfil";
	Layout = "~/Views/Shared/_LayoutUSER.cshtml";
}
 

<br />

@if (ViewBag.Men == "usuario incorrecto")
{
    @:<div class="container">
        @:<h2>Error</h2>
        @:<div class="alert alert-danger">
            @:<strong>Error de usuario:</strong> Los datos que ha introducido no son correctos
            @:</div>
                @:</div>
    }


<br />
<br />
<div class="row">
    <div class="col-xs-12 text-center">
        <!-- lo suyo seria pillar la imagen del user-->
        <img src="@ViewBag.avatar" class="img-responsive" style="margin:0 auto;">
        <h3>&nbsp;Mi perfil</h3>
    </div>
</div>
<!-- porque nunca funciona visual studio?-->


<div class="row">
    <div class="col-xs-10" style="margin-left:10%;">
        <h4 class="">Editar</h4>
        @using (Html.BeginForm("EditarUser", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
             <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="@ViewBag.name">
            </div>
            <div class="form-group">
                <label for="phone">Telefono(opcional):</label>
                <input type="text" class="form-control" name="phone" id="phone" placeholder="@ViewBag.phone">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="@ViewBag.email">
            </div>
                    <div class="form-group">
                        <label for="pwd">Cambiar Password:</label>
                        <input type="password" class="form-control" id="pwd" name="pwd">
                    </div>
                    <div class="form-group">
                        <label for="pwd2">Repetir password:</label>
                        <input type="password" class="form-control" id="pwd2" name="pwd2">
                    </div>
                    <div class="form-group">
                        <label for="fil">Imagen de perfil:</label>
                        <input type="file" class="form-control" id="fil" name="fil">
                    </div>                    
                    <button type="submit" class="btn btn-success">Confirmar</button>
                    <button type="button" class="btn btn-default">Cancelar</button>
        }
    </div>
</div>

